						                <option value="{{ disc.numInventory }}">
						            {% endfor %}
						        </datalist> #}

			<select class="mt-3" id="discs" name="discs[]" multiple class="">
				<option data-placeholder="true"></option>
				{# {% for disc in discs %}
								                <option value="{{ disc.id }}">{{ disc.numInventory }}</option>
								            {% endfor %} #}
			</select>

			<div class="mt-5">
				<button>Ajouter</button>
			</div>


		</form>
	</div>


{% endblock %}
