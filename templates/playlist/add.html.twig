{% extends 'base.html.twig' %}

{% block title %}Hello PlaylistController!
{% endblock %}

{% block body %}
	{# {{ dump(discs) }} #}
	<div class="container">
		<form class="">
			<div class="row">
				<div class="col-4">
					<label for="date">Date</label>
					<input class="form-control" type="date" id="date" name="date" value="dd/mm/yyyy" min="1980-01-01" max="2050-12-31">
				</div>


				<div class="col-4">

					<label for="title">Nom</label>
					<input class="form-control" type="text" id="title" name="title" placeholder="Saissez un nom de playlist">
				</div>
				<div class="col-4">
					<label for="name">Animateur</label>
					<input class="form-control" list="names-choice" id="name" name="name" placeholder="sélectionnez un animateur"/>
					<datalist id="names-choice">
						<option value="Jérôme"></option>
						<option value="Léandro"></option>
						<option value="Edouard"></option>
						<option value="Nicolas"></option>
					</datalist>
				</div>

			</div>
			{# <label for="discs">Disque</label>
						        <input list="discs-choice" id="discs" name="disc" placeholder="sélectionnez un disque"/>
						        <datalist id="discs-choice">
