{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    {# {{ form(modify_user_form) }} #}
<div class="container">

	<h1 class="h3 mb-3 font-weight-normal text-center">Inscription</h1>

	<div class="row justify-content-center">
		<div class="col-6">
			{{ form_start(add_user_form) }}
			<div class="my-custom-class-for-errors">
				{{ form_errors(add_user_form) }}
			</div>
			<div class="row">
				<div class="col">
					{{ form_row(add_user_form.username, {'attr': {'class': 'mg-15 form-control mb-3'}}) }}
					{{ form_row(add_user_form.roles, {'attr': {'class': 'mg-15 form-select mb-3'}}) }}
					{{ form_row(add_user_form.password, {'attr': {'class': 'mg-15 form-control mb-3'}}) }}
                    
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col text-center">
					{{ form_row(add_user_form.Ajouter, {'attr': {'class': 'btn btn-outline-warning py-3 px-5 mt-3 mb-5'}}) }}
                    </div>
                </div>
                {{ form_end(add_user_form) }}
            </div>
        </div>
    </div>
</div>

{% endblock %}