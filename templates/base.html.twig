<!DOCTYPE html>
<html>

<head>
	<meta charset="UTF-8">
	<title>
		{% block title %}Radio beton
		{% endblock %}
	</title>

	{% block stylesheets %}
	<link rel="stylesheet" href="{{asset('css/style.css')}}">
	<link rel="stylesheet" href="https://bootswatch.com/5/litera/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/slim-select/1.27.0/slimselect.min.css" rel="stylesheet">
	<link rel="icon" type="image/png" href="{{asset('img/logo2.png')}}" />	
	{% endblock %}

</head>

<body>
	<div class="main-containt">

		<header>
			{% include "partials/_navbar.html.twig" %}
		</header>

		<div class="container">
			{% for message in app.flashes('playlist_success') %}
				<p class="mb-0 alert alert-success">
					{{ message }}
				</p>
			{% endfor %}

			{% for message in app.flashes('delete_track_success') %}
				<p class="mb-0 alert alert-success">
					{{ message }}
				</p>
			{% endfor %}

			{% for message in app.flashes('add_disc_to_existing_playlist_success') %}
				<p class="mb-0 alert alert-success">
					{{ message }}
				</p>
			{% endfor %}

			{% for message in app.flashes('add_disc_to_existing_playlist_alert') %}
				<p class="mb-0 alert alert-danger">
					{{ message }}
				</p>
			{% endfor %}
		</div>

		{% block body %}{% endblock %}

		{% block javascripts %}
			<script src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.1/js/bootstrap.min.js'></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/slim-select/1.27.0/slimselect.min.js"></script>
			<script src="/js/addTrackstoList.js"></script>
			<script src="/js/attributeInventoryNum.js"></script>
			<script src="/js/selectExportFormat.js"></script>
		{% endblock %}

	</div>
</body>

</html>